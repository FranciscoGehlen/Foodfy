{% extends "layout.njk" %}

{% block content %}

        <title>Nova Receita - Foodfy</title>
        <!-- Main -->
        <main>
            
            <form action="/admin/recipes" method="POST" class="form-adm">
                <div class="form-adm-header">
                    <h2>Nova Receita</h2>
                    <button type="submit">Salvar</button>
                </div>

                <div class="form-adm-body">
                    <div class="item">
                        <div>URL da foto da receita</div>
                        <div>
                            <input type="url" name="image" placeholder="http://">
                        </div>
                    </div>
                </div>

                <div class="item">
                    <div>Nome da receita</div>
                    <div>
                        <input type="text" name="title" placeholder="Nome da Receita">
                    </div>
                </div>

                <div class="item">
                    <div>Autor(a)</div>
                    <div>
                        <input type="text" name="author" placeholder="Nome do(a) autor(a)">
                    </div>
                </div>

                <div class="item">
                    <div>Ingredientes</div>
                    <div id="ingredients">
                        <div class="ingredient">
                            <input type="text" name="ingredients[]" placeholder="Ingrediente">
                        </div>
                    </div>
                    <button type="button" class="add-ingredient" onclick="addIngredient()">Adicionar ingrediente</button>
                </div>

                <div class="item">
                    <div>Modo de preparo</div>
                    <div id="preparation">
                        <div class="step">
                            <input type="text" name="preparation[]" placeholder="Passo">
                        </div>
                    </div>
                    <button type="button" class="add-step" onclick="addStep()">Adicionar passo</button>
                </div>

                <div class="item">
                    <div>Informações adicionais</div>
                    <div>
                        <textarea name="information"></textarea>
                    </div>
                </div>
            </form>
            
        </main>


        {% endblock %}